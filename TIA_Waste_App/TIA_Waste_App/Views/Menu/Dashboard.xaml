<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TIA_Waste_App.Views.Menu.Dashboard">
    <ContentPage.Content>
        <StackLayout VerticalOptions="FillAndExpand">

            <StackLayout x:Name="LogoStack" >
                <Label x:Name="lbl_NoInternet" HorizontalTextAlignment="Center" TextColor="White" BackgroundColor="Red"/>
                
            </StackLayout>
            
            <Label Text="Welcome" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" VerticalOptions="Center" HorizontalOptions="Center"/>
            <StackLayout x:Name="Buttons" >
                <Button Text="View Account" Clicked="AccountInfo" HorizontalOptions="Center" VerticalOptions="Center"/>
                <Button Text="Scan an Image" Clicked="CaptureImage" HorizontalOptions="Center" VerticalOptions="Center"/>
            </StackLayout>

            <StackLayout x:Name="image" Margin="80" TranslationY="-50">
                <Image x:Name="resultImage"/>
                <Button Text="Submit" Clicked="SubmitPicture" HorizontalOptions="Center" VerticalOptions="Center"/>
            </StackLayout>

            
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>